    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/static/css/style.css" >


    <title>Dynamic Website Using Node js</title>
  </head>
  <body>
    
    {{>navbar data=detailsView}}
    
    {{!-- {{>slider sliderData=sliderView}} --}}

    {{!-- Banner Section-1 --}}

    <section class="banner_section_1 background1 py-4 text-center">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>
              Start Learning New Technology Here !!
            </h1>
            <p>
              Sites makes it simple to display your team's work, with easy access to all your content from Google Workspace â€“ whether it's a Drive folder, Doc or even a shared Calendar.
            </p>

            <button class="btn btn-primary" > Start Learning </button>

          </div>
        </div>
      </div>
    </section>

    {{!-- Services Section --}}
  <section id="services_section" class="py-2">
    <div class="container">
      <h1 class="text-center text-secondary" >Services We Offer</h1>
    <div class="row mt-3">
      {{!-- first service column --}}
      {{#each sereviceView}}
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                <div class="container text-center">
                  <i class="{{this.icon}} service_icon"></i>
                </div>
                <h3 class="card-title">{{this.title}}</h3>
                <p>{{this.description}}</p>
                <a href="{{this.link}}">{{this.linkText}}</a>
              </div>
            </div>
          </div>
      {{/each}}
    </div>
  </section>

  {{!-- Banner_section_2 --}}

  <section class="banner2_section text-center py-3 " >
    <div class="conatiner">
      <div class="row">
        <div class="col-md-6 pt-5 "  > 
            {{!-- Left Side --}}
            <h3>We work for Masses, Not for money</h3>
            <p>
              Creation and editing is extremely simple: just click, drag or drop. The design will be rearranged automatically with a grid layout. Everything fits into the best place, and is simple to move, resize or rearrange.
            </p>
             <button class="btn btn-primary" > Click Here </button>
        </div>
         <div class="col-md-6">
          {{!-- Right Side --}}
          <img src="/static/images/pic5.jpg"  alt="" style="height: 250px;">
        </div>
      </div>
    </div>
  </section>

  {{!-- Banner_section_3 --}}

  <section class="banner3_section text-center py-3 " >
    <div class="conatiner">
      <div class="row">

        <div class="col-md-6">
          {{!-- Left  Side --}}
          <img src="/static/images/pic6.jpg"  class="img-fluid" alt="" style="height: 250px;">
        </div>

        <div class="col-md-6 pt-5 "  > 
            {{!-- Right Side --}}
            <h3>We work for People </h3>
            <p>
              Creation and editing is extremely simple: just click, drag or drop. The design will be rearranged automatically with a grid layout. Everything fits into the best place, and is simple to move, resize or rearrange.
            </p>
             <button class="btn btn-primary" > Click Here </button>
        </div>
         
      </div>
    </div>
  </section>


  {{!-- Contact Us section --}}

  <section id="contact_us_id" class="background1"> 

    <div class="conatiner center-form" >
      <h3  class="text-center text-secondary center-form"> Contact Us </h3>
      <div class="row">
        <div class="col-md-12" >
            <form >
              <div class="mb-3" > 
                <label for="exampleInputEmail1" class="form-label">Your Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
              </div>

              <div class="mb-3" >
                <label for="contact-number" class="form-label">Your Contact Number</label>
                <input type="number" class="form-control" id="contact-number-id">
              </div>

              <div class="mb-3">
                <label for="queryField" class="form-label">Your Query</label>
                <textarea style="height: 200px " class="form-control" placeholder="Enter Your Query Here" ></textarea>
               
              </div>

             <div class="container text-center">
              <button type="submit" class="btn btn-primary mt-3 ">Submit</button>
             </div>
              
            </form>
        </div>
      </div>
    </div>
  </section>

  {{!-- About Section --}}

<section class="about_section py-3 text-center ">
  <div class="conatiner">
    <div class="row">

      <div class="col-md-12">
        <h3> About this Website</h3>
        <p>
          Web design is the process of planning, conceptualizing, and arranging content online. Today, designing a website goes beyond aesthetics to include the website's overall functionality. Web design also includes web apps, mobile apps, and user interface design
        </p>
        <button class="btn btn-success" >
          Contact Us
        </button>
      </div>
    </div>
  </div>
  
</section>

<footer class="footer text-center">

  <div class="conatainer">
    <div class="row">
      <div class="col-md-12">
        @2023 Copyright: <span>Arth Technology</Span>
      </div>
    </div>
  </div>

</footer>
  

